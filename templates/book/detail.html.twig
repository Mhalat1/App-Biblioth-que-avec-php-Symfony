{% extends 'base.html.twig' %}

{% block body %} 

    <div class="w-full flex justify-center items-center">

        <div class="bg-white p-4 rounded-lg shadow-lg">
            <ul class="list-none">
                <li class="font-bold text-xl mb-2">{{ book.title }}</li>
                <li class="font-semibold text-gray-600 mb-2">Auteur : {{ book.author.name }}</li>
                <li class="text-gray-600 mb-2">Biographie : {{ book.author.biography }}</li>
            </ul>
        </div>
        <a href="http://127.0.0.1:8000/books" class="bg-blue-500 hover:bg-blue-700 font-bold py-2 px-4 rounded mt-4">Retour liste des livres</a>

    </div>

{% endblock %}

